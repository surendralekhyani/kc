    <%- include('../partials/header.ejs') %>
</head>
<body class="container" style="margin-top: 80px;">
    <%- include('../partials/menu.ejs') %>
	<% if (messages.error) { %>
	<div class="alert alert-danger" role="alert"><%- messages.error %></div>
	<% } %>
    <div class="card"> 
    	<div class="card-header">
			Add Items
		</div>
        <div class="card-body">
            <form action="/items/add" method="post">
                <div class="form-group mt-3">
                    <label>Name:</label>
                    <input type="text" class="form-control" name="itemName" value="<%= itemName %>" autocomplete="off">
                </div>
                <div class="form-group mt-3">
                    <label>Selling Price:</label>
                    <input type="text" class="form-control" name="sellingPrice" value="<%= sellingPrice %>" autocomplete="off">
                </div>
				<div class="form-group mt-3">
                    <label>Purchase Price:</label>
                    <input type="text" class="form-control" name="pp" value="<%= pp %>" autocomplete="off">
                </div>
				<div class="form-group mt-3">
                    <label>GST Rate:</label>
                    <input type="text" class="form-control" name="gstRate" value="<%= gstRate %>" autocomplete="off">
                </div>
				<div class="form-group mt-3">
                    <label>HSN:</label>
                    <input type="text" class="form-control" name="hsn" value="<%= hsn %>" autocomplete="off">
                </div>
                
                <div class="d-grid col-2 mt-3">
                    <input type="submit" class="btn btn-primary" value="Save"/>
                </div>
            </form>
        </div>
    </div>


    <%- include('../partials/footer.ejs') %>
</body>
</html>